@model LibraryManagement.Web.Models.DTOs.BookDetailResponse

@{
	ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<div class="card">
	<div class="card-body">
		<h2 class="card-title">@Model.Title</h2>
		<p class="card-text"><strong>Author:</strong> @Model.Author</p>
		<p class="card-text"><strong>Publication Year:</strong> @Model.PublicationYear</p>
		<p class="card-text"><strong>ISBN:</strong> @Model.ISBN</p>
		<p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
		<p class="card-text"><strong>Publisher:</strong> @Model.Publisher</p>
		<p class="card-text"><strong>Page Count:</strong> @Model.PageCount</p>
		<p class="card-text"><strong>Language:</strong> @Model.Language</p>
		<p class="card-text"><strong>Summary:</strong></p>
		<p class="card-text">@Model.Summary</p>
		<p class="card-text"><strong>Available Copies:</strong> @Model.AvailableCopies</p>
	</div>
</div>

<div class="mt-4">
	<a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Back to Book List</a>
</div>