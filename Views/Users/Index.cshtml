@model List<LibraryManagement.Web.Models.DTOs.UserListItemResponse>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">User List</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="@Url.Action("Index", "Roles")" class="btn btn-info btn-lg">
            <i class="bi bi-gear"></i> Manage Roles
        </a>
        <a href="@Url.Action("Create", "Users")" class="btn btn-success btn-lg">
            <i class="bi bi-person-plus"></i> Create New User
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#Id</th>
                    <th scope="col">Username</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <a href="@Url.Action("ManageUserRoles", "Roles", new { userId = user.Id })" class="btn btn-primary btn-sm me-2">
                                Edit Roles
                            </a>
                            <a href="@Url.Action("Update", "Users", new { id = user.Id })" class="btn btn-sm btn-primary me-2">Edit Props</a>
                            <form asp-action="Delete" asp-controller="Users" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
