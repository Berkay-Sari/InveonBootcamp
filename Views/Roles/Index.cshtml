@model List<LibraryManagement.Web.Models.DTOs.RoleListItemResponse>

@{
	ViewData["Title"] = "Roles";
}

<div class="container mt-5">
	<div class="d-flex justify-content-between align-items-center">
		<h1 class="mb-4">Roles</h1>
		<div>
			<a href="@Url.Action("Index", "Users")" class="btn btn-secondary me-2">Back to User List</a>
			<a href="@Url.Action("Create")" class="btn btn-primary">Create New Role</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead class="thead-dark">
		<tr>
			<th>#</th>
			<th>Role Name</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td>
					<a href="@Url.Action("Update", new { id = role.Id })" class="btn btn-warning btn-sm">Edit</a>
					<form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline">
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div>
